		 WHERE board_no = #{boardNo}
	</update> -->

	<!-- <delete id="delete">
		DELETE FROM board 
		 WHERE board_no = #{boardNo}
	</delete> -->

	<select id="noticeList" resultType="com.example.test.notice.domain.Notice">
		<![CDATA[
	 	SELECT noticeNO AS noticeNo, 
	 		   title, 
	 		   content, 
	 		   views,
	 		   writeDate
	 	  FROM Notice 
	     WHERE noticeNO > 0 
	  ORDER BY noticeNO DESC, 
	  		   writeDate DESC
		]]>
	</select>

</mapper>
