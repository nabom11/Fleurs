	<select id="noticeRead" resultType="com.example.test.notice.domain.Notice">
		SELECT noticeNO AS noticeNo, 
	 		   title, 
	 		   content, 
	 		   views,
	 		   writeDate
		  FROM Notice
		 WHERE noticeNO = #{noticeNo}
	</select>

	<!-- <update id="update">
