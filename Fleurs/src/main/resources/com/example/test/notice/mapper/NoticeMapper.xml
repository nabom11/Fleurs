<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test.notice.mapper.NoticeMapper">

	<insert id="noticeRegister">
		INSERT INTO Notice 
			 ( 
			   title, 
			   content
			 )
		VALUES 
		     (
		       #{title}, 
		       #{content}
		     )
	</insert>
	
